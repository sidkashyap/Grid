#!/bin/bash  -e

DIRS="clang-avx-openmp clang-avx-openmp-mpi clang-avx2 clang-avx2-openmp"
EXTRADIRS="clang-avx clang-avx-openmp clang-avx-openmp-mpi clang-avx-mpi clang-avx2 clang-avx2-openmp clang-avx2-openmp-mpi clang-avx2-mpi icpc-avx icpc-avx2 icpc-avx512 g++-avx-openmp g++5-sse4  g++5-avx  g++-avx clang-sse icpc-avx-openmp-mpi icpc-avx-openmp"
BLACK="\033[30m"
RED="\033[31m"
GREEN="\033[32m"
YELLOW="\033[33m"
BLUE="\033[34m"
PINK="\033[35m"
CYAN="\033[36m"
WHITE="\033[37m"
NORMAL="\033[0;39m"

for D in $DIRS
do

echo
echo -e $RED ==============================
echo -e $GREEN $D
echo -e $RED ==============================
echo -e $BLUE

  cd builds/$D
  make clean all -j 8
  cd ../../
echo -e $NORMAL
done

if [ "X$1" == "Xextra" ]
then
for D in $EXTRADIRS
do

echo
echo -e $RED ==============================
echo -e $RED $D
echo -e $RED ==============================
echo -e $BLUE

  cd builds/$D
  make clean all -j 8
  cd ../../
echo -e $NORMAL
done
fi
